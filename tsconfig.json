{
  "compilerOptions": {
    "lib": ["DOM", "es2022"],
    "strict": true,
    "target": "es2022",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "baseUrl": "."
  },
  "include": [
    "./plugins/**/*.ts",
    "./libraries/**/*.ts"
  ]
}
